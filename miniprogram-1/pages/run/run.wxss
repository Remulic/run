.page {
  background-color: #fbf9fe;
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
}
.head{
  margin-top: 40rpx;
  padding: 30rpx;
  line-height: 1;
}
.mapView{
  align-items: center;
  position: absolute;
  bottom: 0rpx;
}
.share{
  position: absolute;
  top: 80rpx;
  right: 10px;
  border: 4rpx solid #000000;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  z-index: 100;
  margin-bottom: 0rpx;
}
.music {
  position: absolute;
  top: 10rpx;
  right: 10px;
  border: 4rpx solid #000000;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  z-index: 100;
  margin-bottom: 0rpx;
}
.playing {
  animation: rotate 2s linear infinite;
}
/* 音符旋转动画 */
@keyframes rotate {
  from {
      transform: rotate(0deg);
  }
  to {
      transform: rotate(360deg);
  }
}
/* 音符 */
.music image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  height: 80%;
}
/* 按钮 */
.buttons {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: rgb(252, 6, 6);
  text-align: center;
  align-items: center;
  line-height: 200rpx;
  color: seashell;
  font-size: 24px;
  margin: 50rpx 250rpx;
}

.play::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 320rpx;
  height: 320rpx;
  background: #ec3a03;
  border-radius: 50%;
  opacity: 0.2;
  animation: breath .6s linear .5s infinite alternate; 
  }
@keyframes breath { 
 0%   { opacity: 0.2; }
 100% { opacity: 0; }
}
